# Configuration SFTP OVH
SFTP_HOST=ftp.votre-domaine.ovh
SFTP_PORT=22
SFTP_USER=votre_utilisateur_ovh
SFTP_PASSWORD=votre_mot_de_passe_secure
SFTP_REMOTE_PATH=/www/data

# Intervalles de mise à jour (en millisecondes)
# SPORTS: 5000 = 5 secondes (live scores)
# NEWS: 1800000 = 30 minutes (actualités, culture, mercato)
SPORTS_UPDATE_INTERVAL=5000
NEWS_UPDATE_INTERVAL=1800000

# Mode debug (true/false)
DEBUG=false
